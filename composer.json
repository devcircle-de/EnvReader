{
    "name": "vansari/env-reader",
    "description": "Simple Env Reader/Parser for PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Kurt Junker",
            "email": "kurt.junker@posteo.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vansari\\EnvReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vansari\\EnvReader\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "overtrue/phplint": "^9.0",
        "vimeo/psalm": "^5.7",
        "slevomat/coding-standard": "^8.8"
    },
    "scripts": {
        "lint": "vendor/bin/phplint src",
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src tests",
        "psalm": "vendor/bin/psalm",
        "unit": "vendor/bin/phpunit tests",
        "test": [
            "@lint",
            "@phpcs",
            "@psalm",
            "@unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
